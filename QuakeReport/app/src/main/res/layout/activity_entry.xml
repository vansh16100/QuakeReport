<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".EntryActivity">

    <EditText
        android:id="@+id/startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:hint="yyyy-mm-dd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/endTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:hint="yyyy-mm-dd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tvStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start date"
        app:layout_constraintTop_toBottomOf="@+id/startTime"
        app:layout_constraintRight_toRightOf="@+id/startTime"
        app:layout_constraintLeft_toLeftOf="@+id/startTime"
        />
    <TextView
        android:id="@+id/tvEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End date"
        app:layout_constraintTop_toBottomOf="@+id/endTime"
        app:layout_constraintRight_toRightOf="@+id/endTime"
        app:layout_constraintLeft_toLeftOf="@+id/endTime"
        />
    <Button
        android:id="@+id/btnGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET INFORMATION"
        android:background="@drawable/round_corner2"
        app:layout_constraintTop_toBottomOf="@+id/tvStartTime"
        app:layout_constraintStart_toEndOf="@+id/tvStartTime"
        app:layout_constraintEnd_toStartOf="@+id/tvEndTime"
        android:layout_marginTop="50dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>